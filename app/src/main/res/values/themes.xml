<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TAPPY" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#FF8155</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:statusBarColor" tools:ignore="DuplicateDefinition">#FF8155</item>
    </style>

    <style name="Theme.TAPPY.Button" parent="Theme.AppCompat">
        <item name="android:minHeight">72dp</item>
        <item name="cornerRadius">30dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:textColor">@color/btnTextColor</item>
        <item name="android:backgroundTint">@color/bgButton</item>
        <item name="android:textSize">18dp</item>
        <item name="fontFamily">@font/ubuntu</item>
    </style>

    <style name="Theme.TAPPY.InputLabel">
        <item name="android:textSize">18dp</item>
        <item name="fontFamily">@font/ubuntu</item>
        <item name="android:textColor">#796492</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="Theme.TAPPY.InputField">
        <item name="android:layout_height">42dp</item>
        <item name="backgroundTint">#FCF9FF</item>
        <item name="cornerRadius">5dp</item>
        <item name="android:radius">5dp</item>
    </style>
</resources>