<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav"
    app:startDestination="@id/splashFragment">
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.tapp.ui.SplashFragment"
        android:label="SplashFragment" >
        <action
            android:id="@+id/action_splashFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.tapp.ui.home.HomeFragment"
        android:label="home_fragment"
        tools:layout="@layout/home_fragment" >
        <action
            android:id="@+id/action_homeFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
        <action
            android:id="@+id/action_homeFragment_to_organiserFragment"
            app:destination="@id/organiserFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.tapp.ui.search.SearchFragment"
        android:label="search_fragment"
        tools:layout="@layout/search_fragment" />
    <fragment
        android:id="@+id/organiserFragment"
        android:name="com.example.tapp.ui.organiser.OrganiserFragment"
        android:label="organiser_fragment"
        tools:layout="@layout/organiser_fragment" >
        <action
            android:id="@+id/action_organiserFragment_to_plannedTripInfoFragment"
            app:destination="@id/plannedTripInfoFragment" />
        <action
            android:id="@+id/action_organiserFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
    </fragment>
    <fragment
        android:id="@+id/plannedTripInfoFragment"
        android:name="com.example.tapp.ui.organiser.PlannedTripInfoFragment"
        android:label="planned_trip_info_fragment"
        tools:layout="@layout/planned_trip_info_fragment" >
        <argument
            android:name="trip"
            app:argType="com.example.tapp.model.Trip" />
        <action
            android:id="@+id/action_plannedTripInfoFragment_to_locationsFragment"
            app:destination="@id/locationsFragment" />
        <action
            android:id="@+id/action_plannedTripInfoFragment_to_transfersFragment"
            app:destination="@id/transfersFragment" />
        <action
            android:id="@+id/action_plannedTripInfoFragment_to_accomodationViewFragment"
            app:destination="@id/accomodationViewFragment" />
    </fragment>
    <fragment
        android:id="@+id/locationsFragment"
        android:name="com.example.tapp.ui.organiser.LocationsFragment"
        android:label="LocationsFragment" >
        <argument
            android:name="trip"
            app:argType="com.example.tapp.model.Trip" />
    </fragment>
    <fragment
        android:id="@+id/transfersFragment"
        android:name="com.example.tapp.ui.search.TransfersFragment"
        android:label="transfers_fragment"
        tools:layout="@layout/transfers_fragment" >
        <argument
            android:name="trip"
            app:argType="com.example.tapp.model.Trip" />
    </fragment>
    <fragment
        android:id="@+id/accomodationViewFragment"
        android:name="com.example.tapp.ui.organiser.AccomodationViewFragment"
        android:label="accomodation_view_fragment"
        tools:layout="@layout/accomodation_view_fragment" >
        <argument
            android:name="acc"
            app:argType="com.example.tapp.model.Accommodation" />
    </fragment>
</navigation>